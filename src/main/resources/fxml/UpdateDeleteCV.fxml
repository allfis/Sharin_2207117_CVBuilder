<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.UpdateDeleteCVController"
            fitToWidth="true"
            stylesheets="@../css/styles.css">

    <VBox alignment="TOP_CENTER" spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Title -->
        <Text text="Update / Delete CV" styleClass="title-text"/>


        <!-- Search Section -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Search by Email:"/>
            <TextField fx:id="searchEmailField" promptText="Enter email"/>
            <Button text="Search" styleClass="purple-button" onAction="#onSearchCV"/>
        </HBox>

        <!-- Form using GridPane -->
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints halignment="LEFT" prefWidth="300"/>
            </columnConstraints>

            <!-- Full Name -->
            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Email Address -->
            <Label text="Email Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Phone Number -->
            <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Address -->
            <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Educational Qualifications -->
            <Label text="Education:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="educationField" prefRowCount="3" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <!-- Skills -->
            <Label text="Skills:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="skillsField" prefRowCount="3" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Work Experience -->
            <Label text="Experience:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextArea fx:id="experienceField" prefRowCount="3" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <!-- Projects -->
            <Label text="Projects:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextArea fx:id="projectsField" prefRowCount="3" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <!-- Update/Delete Buttons -->
            <HBox spacing="20" alignment="CENTER" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Button text="Update CV" styleClass="purple-button" onAction="#onUpdateCV"/>
                <Button text="Delete CV" styleClass="purple-button" onAction="#onDeleteCV"/>
            </HBox>
        </GridPane>
    </VBox>
</ScrollPane>
