<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cvbuilder.CreateController"
            stylesheets="@../css/styles.css">

    <top>
        <VBox spacing="5" alignment="CENTER">
            <Text text="Create Your CV" styleClass="title-text"/>
            <Text text="Fill in your details below" styleClass="sub-text"/>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <VBox spacing="10" styleClass="cv-section">
                    <Text text="Personal Information" styleClass="cv-title"/>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="addressField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <VBox spacing="10" styleClass="cv-section">
                    <Text text="Education" styleClass="cv-title"/>
                    <TextArea fx:id="educationArea" prefRowCount="3"/>
                </VBox>

                <VBox spacing="10" styleClass="cv-section">
                    <Text text="Skills" styleClass="cv-title"/>
                    <TextArea fx:id="skillsArea" prefRowCount="3"/>
                </VBox>

                <VBox spacing="10" styleClass="cv-section">
                    <Text text="Work Experience" styleClass="cv-title"/>
                    <TextArea fx:id="experienceArea" prefRowCount="3"/>
                </VBox>

                <VBox spacing="10" styleClass="cv-section">
                    <Text text="Projects" styleClass="cv-title"/>
                    <TextArea fx:id="projectsArea" prefRowCount="3"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox alignment="CENTER">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Button text="Generate CV" onAction="#onGenerateCV" styleClass="button"/>
        </VBox>
    </bottom>

</BorderPane>
