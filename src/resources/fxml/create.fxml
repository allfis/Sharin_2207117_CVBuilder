<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="10" stylesheets="@/css/styles.css" vgap="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder.CreateController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Text text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Text text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Text text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Text text="Education :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="educationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Text text="Skills :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="skillsField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Text text="Experience :" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="experienceField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Text text="Projects :" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="projectsField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Button onAction="#onGenerate" text="Generate CV" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
