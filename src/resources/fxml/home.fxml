<VBox alignment="CENTER" spacing="20" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvbuilder.HomeController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>


    <Text styleClass="title-text" text="Welcome to CV Builder">Welcome to CV Builder</Text>
    <Text styleClass="sub-text" text="Let's Build Your Professional CV">
      <font>
         <Font name="Arial Black" size="12.0" />
      </font></Text>

    <Button fx:id="createBtn" onAction="#onCreate" text="Create New CV" />
</VBox>
